:look
	if tries_trashcans < 1:
		say("dziadek", "Looks gross. I see some used can, how appropriate.")
	else:
		say("dziadek", "Looks gross and empty.")

:pickup

	if tries_trashcans < 1:
		tries_trashcans = tries_trashcans + 1
		say("dziadek", "Do I really look like that much of a bum?")
	else:
		if tries_trashcans < 2:
			say("dziadek", "Ok. If you insist.")
			anim_block("dziadek", "take_up")
			inventory_add("used_can")
			teleport_pos("highlight", 25, 10)
			teleport_pos("used_can", 25, 10)
			wait(2)
			set_active("highlight", false)
			set_active("used_can", false)
			tries_trashcans = tries_trashcans + 1
		else:
			say("dziadek", "It's empty and still gross.")

:use
	say("dziadek", "What for?")

:use "used_can"
	say("dziadek", "I don't want to throw it away. I just got it!")